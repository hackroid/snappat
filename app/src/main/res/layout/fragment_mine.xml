<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical"
  tools:context="com.seclass.snappat.modules.mine.MineFragment">

  <RelativeLayout
    android:id="@+id/mine_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_60"
    android:gravity="center_vertical">
    <ImageView
      android:layout_width="match_parent"
      android:layout_height="@dimen/dimens_60"
      android:contentDescription="@string/top_bar_bg"
      android:scaleType="fitXY"
      android:src="@mipmap/person_bg"/>
    <TextView
      android:id="@+id/bar_text"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:text="@string/mine_en_text"
      android:textColor="@color/white"
      android:textSize="@dimen/text_19"/>
  </RelativeLayout>

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="400dip"
    android:orientation="vertical">
    <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="100dip">
      <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_19"
        android:src="@drawable/ic_anon_user_48dp"/>
      <TextView
        android:id="@+id/username"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_margin="40dip"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/imageView"
        android:text="用户名:"/>
    </RelativeLayout>
    <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="100dip">
      <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_19"
        android:src="@drawable/permission_ic_phone"/>
      <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dip"
        android:layout_marginTop="40dip"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/imageView1"
        android:text="电话:"/>
    </RelativeLayout>
    <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="100dip">
      <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_19"
        android:src="@android:drawable/ic_menu_info_details"/>
      <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dip"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/imageView3"
        android:text="个人简介:无."/>

    </RelativeLayout>
    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_19"
        android:layout_gravity="center_horizontal"
        android:text="金币:0"/>
      <TextView
        android:id="@+id/follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_19"
        android:layout_gravity="center_horizontal"
        android:text="关注:0"/>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
      android:id="@+id/see_mystery"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="我的谜题"/>
    <Button
      android:id="@+id/see_histoy"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="我的解密"/>
    <Button
      android:id="@+id/see_message"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="我的信息"/>
  </LinearLayout>
</LinearLayout>